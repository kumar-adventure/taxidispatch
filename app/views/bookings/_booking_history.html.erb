<div class="content_wrap clearfix">
	<div class="content booking_history gray_box clearfix">
    <%= form_tag booking_history_path, :method => "get" do %>  
    <div class="table_filters">
      <ul class="form_wrap clearfix">
        <li class="fl-l"><%= text_field_tag :pickup_address, params[:pickup_address], :placeholder => 'pickup_address', :class => "input_ico input_ico_search" %></li>
        <li class="fl-l"><%= text_field_tag :created_at, params[:created_at], :placeholder => 'created_at', :class => "input_ico input_ico_search" %></li>
        <li class="fl-l"><%= text_field_tag :pickup_time, params[:pickup_time], :placeholder => 'pickup_time', :class => "input_ico input_ico_time pickup_time timespinner" %></li>
      </ul>
    </div>
    <% end %>
    <table id="booking_history" class="display">
      <thead>
        <tr>
          <th>Date</th>
          <th>Pickup &amp; Drop Off</th>
          <th>Distance</th>
          <th>Payment</th>
          <th>Passenger</th>
          <th>Driver</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% @bookings.each do |booking|%>
        <tr>
          <td><%= booking.created_at.strftime("%d %b %Y")%>, <%= booking.created_at.strftime("%H:%M")%></td>
          <td><%= booking.showpickup_address(booking.id)%> & <%= booking.showdropoff_address(booking.id) %></td>
          <td>160.5 miles</td>
          <td>â‚¬ 1415.09</td>
          <td>Benjamin Westrup</td>
          <td>Christopher Walker</td>
          <td>Done</td>
        </tr>
        <% end %>
      </tbody>
    </table>  
  </div>
  <%= will_paginate @bookings %>
  <%= link_to "Create a New Booking", bookings_path, :class => "btn btn_orange"  %>
</div>

            
       
